Language lexer_features;

Lexer

  c_comment = Shortest '/*' Any* '*/';

  eol = #13 | #10 | #13 #10;

  line_comment = '//' (Shortest (Any* Look (eol | '' Look End))) (eol | '' Look End);

  letter = upper_case | lower_case;
  upper_case = 'A'..'Z';
  lower_case = 'a'..'z';
  digit = '0'..'9';

  if_keyword = 'if';
  while_keyword = 'while';

  identifier = letter (letter | digit)*;
  number = digit+;

  ip_address = (number Separator '.')^4;

  hex_digit = 'a'..'f' | upper_case - ('G'..'Z') | digit;

  ill_deffined_hex = hex_digit+;

  Token
    if_keyword, 'else', while_keyword, identifier, number, ip_address, ill_deffined_hex;

  Ignored
    c_comment, line_comment, ' ', #10, #xD;

  Priority
    ill_deffined_hex > identifier;
