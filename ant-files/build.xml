<project name="sablecc" default="development" basedir="..">

  <!-- Check dependencies -->

  <fail message="Ant version 1.7.0 or later is required.">
    <condition>
      <not>
        <antversion atleast="1.7.0" />
      </not>
    </condition>
  </fail>

  <fail message="You must add the SableCC 3 jar library in the $ANT_HOME/lib directory.">
    <condition>
      <not>
        <available classname="org.sablecc.ant.taskdef.Sablecc" />
      </not>
    </condition>
  </fail>

  <fail message="You must add the JUnit 4 jar library in the $ANT_HOME/lib directory.">
    <condition>
      <not>
        <available classname="org.junit.Test" />
      </not>
    </condition>
  </fail>

  <!-- Tasks -->

  <taskdef name="sablecc3" classname="org.sablecc.ant.taskdef.Sablecc" />

  <!-- Global Properties -->

  <property name="package.name" value="sablecc" />
  <property name="package.version" value="4-alpha.5" />

  <property name="src.dir" value="src" />
  <property name="grammars.dir" value="grammars" />
  <property name="macros.dir" value="macros" />
  <property name="junit-tests.dir" value="junit-tests" />
  <property name="regression-tests.dir" value="regression-tests" />
  <property name="manifest.dir" value="manifest" />

  <property name="classes.dir" value="classes" />
  <property name="test-classes.dir" value="test-classes" />
  <property name="doc.dir" value="doc" />
  <property name="devel-doc.dir" value="devel-doc" />
  <property name="lib.dir" value="lib" />

  <property name="dist.dir" value="${package.name}-${package.version}" />
  <property name="dist.file" value="${package.name}-${package.version}.zip" />

  <!-- Grammar Compilation -->

  <target name="compile-grammars" description="Compile grammars.">

    <delete dir="${src.dir}/org/sablecc/sablecc/syntax3" />
    <delete dir="${src.dir}/org/sablecc/sablecc/launcher/syntax3" />
    <delete dir="${src.dir}/org/sablecc/sablecc/intermediate/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/launcher/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/intermediate/syntax3" />

    <sablecc3 src="${grammars.dir}"
              includes="*.sablecc3"
              outputdirectory="${src.dir}" />

  </target>

  <!-- Source Compilation -->

  <target name="compile-sources"
          depends="compile-grammars"
          description="Compile the source code.">

    <delete dir="${classes.dir}" />

    <mkdir dir="${classes.dir}" />

    <delete file="${src.dir}/org/sablecc/sablecc/launcher/Version.java" />

    <echo file="${src.dir}/org/sablecc/sablecc/launcher/Version.java">/* Generated by build.xml */

package org.sablecc.sablecc.launcher;

import org.sablecc.exception.InternalException;

/**
 * This class provides the version.
 */
public class Version {

    /** The version. */
    public static final String VERSION = "${package.version}";

    /** Prevents instantiation of this class. */
    private Version() {

        throw new InternalException("no instance allowed");
    }
}
</echo>

    <delete file="${src.dir}/org/sablecc/objectmacro/launcher/Version.java" />

    <echo file="${src.dir}/org/sablecc/objectmacro/launcher/Version.java">/* Generated by build.xml */

package org.sablecc.objectmacro.launcher;

import org.sablecc.exception.InternalException;

/**
 * This class provides the version.
 */
public class Version {

    /** The version. */
    public static final String VERSION = "${package.version}";

    /** Prevents instantiation of this class. */
    private Version() {

        throw new InternalException("no instance allowed");
    }
}
</echo>

    <javac srcdir="${src.dir}" destdir="${classes.dir}" debug="true" />

    <copy todir="${classes.dir}">
      <fileset dir="${src.dir}">
        <include name="**/*.dat" />
      </fileset>
    </copy>

  </target>

  <!-- Test Compilation -->

  <target name="compile-tests"
          depends="compile-sources"
          description="Compile JUnit and regression tests.">

    <delete dir="${test-classes.dir}" />

    <mkdir dir="${test-classes.dir}" />

    <javac srcdir="${junit-tests.dir}"
           classpath="${classes.dir}"
           destdir="${test-classes.dir}"
           debug="true" />

    <javac srcdir="${regression-tests.dir}"
           classpath="${classes.dir}"
           destdir="${test-classes.dir}"
           debug="true" />

  </target>

  <!-- Test Execution -->

  <target name="run-tests"
          depends="compile-tests"
          description="Run JUnit and regression tests.">

    <junit haltonfailure="yes">
      <formatter type="brief" usefile="false" />

      <classpath>
        <pathelement location="${classes.dir}" />
        <pathelement location="${test-classes.dir}" />
      </classpath>

      <batchtest>
        <fileset dir="${test-classes.dir}" includes="**/*Test.class" />
        <fileset dir="${test-classes.dir}" includes="**/*Bug.class" />
      </batchtest>

    </junit>

  </target>

  <!-- User Documentation Generation -->

  <target name="generate-documentation"
          depends="compile-sources"
          description="Generate user documentation.">

    <delete dir="${doc.dir}" />

    <mkdir dir="${doc.dir}" />

    <javadoc destdir="${doc.dir}" splitindex="true" access="protected">

      <packageset dir="${src.dir}">
        <exclude name="org/sablecc/sablecc/syntax3/**" />
        <exclude name="org/sablecc/sablecc/launcher/syntax3/**" />
        <exclude name="org/sablecc/sablecc/intermediate/syntax3/**" />
        <exclude name="org/sablecc/objectmacro/syntax3/**" />
        <exclude name="org/sablecc/objectmacro/launcher/syntax3/**" />
        <exclude name="org/sablecc/objectmacro/intermediate/syntax3/**" />
      </packageset>

      <link href="http://java.sun.com/javase/6/docs/api/" />

    </javadoc>

  </target>

  <!-- Developer Documentation Generation -->

  <target name="generate-developer-documentation"
          depends="compile-sources"
          description="Generate developer documentation.">

    <delete dir="${devel-doc.dir}" />

    <mkdir dir="${devel-doc.dir}" />

    <javadoc destdir="${devel-doc.dir}"
             use="true"
             linksource="true"
             splitindex="true"
             access="private">

      <packageset dir="${src.dir}" />

      <link href="http://java.sun.com/javase/6/docs/api/" />

    </javadoc>

  </target>

  <!-- Jar Library Creation -->

  <target name="create-jar"
          depends="compile-sources"
          description="Create the jar library file.">

    <delete dir="${lib.dir}" />

    <mkdir dir="${lib.dir}" />

    <jar destfile="${lib.dir}/${package.name}.jar"
         manifest="${manifest.dir}/MANIFEST.MF"
         index="true"
         compress="true"
         level="9">

      <fileset dir="${classes.dir}" excludes="org/sablecc/objectmacro/**" />

    </jar>

    <jar destfile="${lib.dir}/objectmacro.jar"
         manifest="${manifest.dir}/OBJECTMACRO.MF"
         index="true"
         compress="true"
         level="9">

      <fileset dir="${classes.dir}" excludes="org/sablecc/sablecc/**" />

    </jar>

  </target>

  <!-- Distribution Zip File Creation -->
  <target name="create-zip"
          depends="run-tests, create-jar, generate-documentation"
          description="Create distribution zip file.">

    <delete dir="${dist.dir}" />
    <delete file="${dist.file}" />

    <mkdir dir="${dist.dir}" />

    <copy file="README" todir="${dist.dir}" />
    <copy file="LICENSE" todir="${dist.dir}" />
    <copy file="NOTICE" todir="${dist.dir}" />

    <copy todir="${dist.dir}">

      <fileset dir="." includes="ant-files/**" />

      <fileset dir="." includes="${src.dir}/**" />
      <fileset dir="." includes="${grammars.dir}/**" />
      <fileset dir="." includes="${macros.dir}/**" />
      <fileset dir="." includes="${junit-tests.dir}/**" />
      <fileset dir="." includes="${regression-tests.dir}/**" />
      <fileset dir="." includes="${manifest.dir}/**" />

      <fileset dir="." includes="${doc.dir}/**" />
      <fileset dir="." includes="${lib.dir}/**" />

    </copy>

    <zip destfile="${dist.file}" basedir="." includes="${dist.dir}/**" />

  </target>

  <!-- Clean Up -->

  <target name="clean-up" description="Delete all generated files.">

    <delete file="${dist.file}" />
    <delete dir="${dist.dir}" />
    <delete dir="${lib.dir}" />

    <delete dir="${devel-doc.dir}" />
    <delete dir="${doc.dir}" />

    <delete dir="${test-classes.dir}" />
    <delete dir="${classes.dir}" />
    <delete dir="${src.dir}/org/sablecc/sablecc/syntax3" />
    <delete dir="${src.dir}/org/sablecc/sablecc/launcher/syntax3" />
    <delete dir="${src.dir}/org/sablecc/sablecc/intermediate/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/launcher/syntax3" />
    <delete dir="${src.dir}/org/sablecc/objectmacro/intermediate/syntax3" />

    <delete file="${src.dir}/org/sablecc/sablecc/launcher/Version.java" />
    <delete file="${src.dir}/org/sablecc/objectmacro/launcher/Version.java" />

  </target>

  <!-- Development -->

  <target name="development"
          depends="run-tests, generate-developer-documentation"
          description="Run tests and generate developer documentation." />

</project>
