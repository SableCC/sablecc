# ========== Separator test ==============

Macro comma_separator
    Param
        x : empty_macro, separator=", ";
{Body}
La liste x : {x}
Corps de semicolon : {Insert: semicolon_separator(x)}.
{End}

Macro empty_macro
{Body}
empty
{End}

Macro semicolon_separator
    Internal
        x : empty_macro;
{Body}
Le corps de C : {x}
{End}

# ========== Example for back end tests ==========

Macro a
    Param
        x : String;
        y : b(z), separator="\n";
        z : c("first argument of c in a", x);
{Body}
============= A ===============
Y : {y}
{End}

Macro b
    Param
        o : String;
        s : c(o, o);
    Internal
        p : c;
{Body}
============== B ===============
P : {p}
S : {s}
{End}

Macro c
    Internal
        q : String;
        r : String;
{Body}
=============== C ==============
Q : {q}
R : {r}
{End}

Macro d
{Body}
{Insert: e(
    "y1 {Insert: c("y2 {Insert: c("y3", "yz3")}", "{Insert: c("a", "b")}")}",
    "{Insert: c("y4", "z4")}",
    "{Insert: c("y4", "z4")}")
}
{End}

Macro e
    Internal
        s : String;
        t : String;
        u : String;
{Body}
{s}
{t}
{u}
{End}

# ========= Example for cyclic reference ==============

Macro f
    Param
        x : g(y);
        y : h;
{Body}
{y} {x}
{End}

Macro g
    Internal
        z : h;
{Body}
{z}
{End}

Macro h
    Param
        lala : f;
{Body}
{la}
{lala}
{End}

#=========== Example =========

Macro i
    Param
        y : k("lala");
        z : k("On est dans i"), j(y);
{Body}
{y}
{z}
{End}

Macro j
    Internal
        y : k;
{Body}
{y}
{End}

Macro k
    Internal
        a : String;
{Body}
{a}
{End}


